<% content_for :carousel do %>
  <% @banners.each do |banner| %>
  <div class="item">
    <h1 class="title"><%= banner.header.html_safe %></h1>
    <p class="body"><%= banner.body %></p>
    <div class="img" style="background-image: url(<%= banner.banner.url %>)"></div>
  </div>
  <% end %>
<% end %>

<div class="body">
  <% @brp_news.entries.each do |article| %>
  <% description = article.summary %>
  <% title = article.title %>
  <% link = article.url %>
  <% img_source = /(?<=\<img\ssrc\=\"|\')[\w\:\/\.]*(?=\"|\')/i.match article.yandex %>
  <div class="item">
    <% unless img_source.nil? %>
    <%= link_to "<img src=\"http://rosan.com#{img_source}\" alt=\"#{title}\"/>".html_safe, link, {target: "_blank", rel: "nofollow"} %>
    <% end %>
    <p class="date"><%= article.published.to_formatted_s(:db) %></p>
    <p class="link title"><%= link_to title, link, {target: "_blank", rel: "nofollow"} %></p>
    <div class="desc"><%= link_to content_tag(:p, strip_tags(description)), link, {target: "_blank", rel: "nofollow"} %></div>
  </div>
  <% end %>
</div>
