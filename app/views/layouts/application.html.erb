<script type="text/javascript">
  DG.autoload(function() {
    var myMap = new DG.Map('gis-map');
    myMap.setCenter(new DG.GeoPoint(65.666528, 57.1580),13);
    myMap.controls.add(new DG.Controls.Zoom());
    var b1 = new DG.Balloons.Common({
      geoPoint: new DG.GeoPoint(65.666528, 57.164327),
      contentHtml: 'ул. Дачная, 2Б'
    });
    var m1 = new DG.Markers.Common({
      geoPoint: new DG.GeoPoint(65.666528, 57.164327),
      icon: new DG.Icon(
          'assets/map-pin.png',
          new DG.Size(48, 64)
      ),
      clickCallback: function() {
        if (! myMap.balloons.getDefaultGroup().contains(b1)) {
          myMap.balloons.add(b1);
        } else {
          b1.show();
        }
      }
    });

    myMap.markers.add(m1);
    myMap.disableScrollZoom();
  });
